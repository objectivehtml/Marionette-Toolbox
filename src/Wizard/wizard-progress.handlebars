<div class="wizard-progress-bar">
{{#steps}}
    <a class="wizard-step disabled {{#if options.complete}}{{../../completeClassName}}{{/if}}" data-step="{{options.step}}" {{#if options.title}}title="{{../options.title}}"{{/if}}>
        {{#if options.label}}
            <span class="wizard-step-label">{{../options.label}}</span>
        {{/if}}

        {{#not options.label}}
            {{#if ../options.title}}
                <span class="wizard-step-label">{{../../options.title}}</span>
            {{/if}}
        {{/not}}
    </a>
{{/steps}}
</div>
