<div class="btn-group {{#if dropUp}}dropup{{/if}}">
	{{#if splitButton}}
		<button type="button" class="{{../buttonClassName}}">{{#if ../buttonIcon}}<i class="{{../../buttonIcon}}"></i>{{/if}} {{../buttonLabel}}</button>
		<button type="button" class="{{../buttonClassName}} {{../buttonToggleClassName}}" data-toggle="dropdown" aria-expanded="false">
			<span class="caret"></span>
			<span class="sr-only">Toggle Dropdown</span>
		</button>
	{{/if}}

	{{#not splitButton}}
		<button type="button" class="{{../buttonClassName}} {{../buttonToggleClassName}}" data-toggle="dropdown" aria-expanded="false">
			{{#if ../buttonIcon}}<i class="{{../../buttonIcon}}"></i>{{/if}}
			{{../buttonLabel}}
			<span class="caret"></span>
			<span class="sr-only">Toggle Dropdown</span>
		</button>
	{{/not}}

	<ul class="{{#if menuClassName}}{{../menuClassName}}{{/if}}"></ul>
</div>
