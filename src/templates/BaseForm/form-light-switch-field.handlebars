{{#if header}}
	<{{../headerTagName}}>{{../header}}</{{../headerTagName}}>
{{/if}}

{{#if description}}
	<p {{#if ../descriptionClassName}}class="{{../../descriptionClassName}}"{{/if}}>{{../description}}</p>
{{/if}}

<div class="light-switch {{#is value 1}}{{../activeClassName}}{{/is}}" tabindex="0">
	<div class="light-switch-container">
		<div class="light-switch-label on"></div>
		<div class="light-switch-handle"></div>
		<div class="light-switch-label off"></div>
	</div>
</div>

<input type="hidden" name="{{name}}" value="{{value}}">